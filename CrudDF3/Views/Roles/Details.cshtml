@model CrudDF3.Models.Role

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreRol)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionRol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionRol)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoRol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoRol)
        </dd>

        <!-- Mostrar los permisos asignados -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RolPermisos)
        </dt>
        <dd class="col-sm-10">
            @if (Model.RolPermisos.Any())
            {
                <ul>
                    @foreach (var rolPermiso in Model.RolPermisos)
                    {
                        <li>@rolPermiso.IdPermisoNavigation?.NombrePermiso</li>
                    }
                </ul>
            }
            else
            {
                <p>No permissions assigned.</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdRol">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
