@model CrudDF3.Models.Permiso

@{
    ViewData["Title"] = "Detalles del Permiso";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark">@ViewData["Title"]</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.IdPermiso" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Volver al Listado
            </a>
        </div>
    </div>

    <div class="card public-card">
        <div class="card-header public-card-header">
            <h5 class="mb-0"><i class="fas fa-key me-2"></i>Información del Permiso</h5>
        </div>
        <div class="card-body public-card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.NombrePermiso)</dt>
                <dd class="col-sm-9 mb-3">@Html.DisplayFor(model => model.NombrePermiso)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.DescripcionPermiso)</dt>
                <dd class="col-sm-9 mb-3">@Html.DisplayFor(model => model.DescripcionPermiso)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EstadoPermiso)</dt>
                <dd class="col-sm-9">
                    @if (Model.EstadoPermiso)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i> Activo
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="fas fa-times-circle me-1"></i> Inactivo
                        </span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-3">
        <a asp-action="Index" class="btn btn-link text-decoration-none">
            <i class="fas fa-list me-1"></i> Ver todos los permisos
        </a>
    </div>
</div>