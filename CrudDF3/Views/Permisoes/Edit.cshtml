@model CrudDF3.Models.Permiso

@{
    ViewData["Title"] = "Editar Permiso";
}

<style>
    .card-header-custom {
        background: linear-gradient(135deg, #274c77, #6096ba) !important;
        color: white !important;
    }

    .btn-primary-custom {
        background-color: #6096ba;
        border-color: #6096ba;
    }

        .btn-primary-custom:hover {
            background-color: #274c77;
            border-color: #274c77;
        }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="color: #2b2d42;"><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header card-header-custom">
            <h5 class="mb-0"><i class="fas fa-key me-2"></i>Información del Permiso</h5>
        </div>
        <div class="card-body" style="background-color: #f8f9fa;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdPermiso" />

                <div class="form-group mb-4">
                    <label asp-for="NombrePermiso" class="form-label fw-bold" style="color: #2b2d42;">Nombre del Permiso</label>
                    <input asp-for="NombrePermiso" class="form-control" placeholder="Ingrese el nombre del permiso" />
                    <span asp-validation-for="NombrePermiso" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="DescripcionPermiso" class="form-label fw-bold" style="color: #2b2d42;">Descripción</label>
                    <textarea asp-for="DescripcionPermiso" class="form-control" rows="3" placeholder="Describa el propósito de este permiso"></textarea>
                    <span asp-validation-for="DescripcionPermiso" class="text-danger small"></span>
                </div>

                <div class="form-group form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="EstadoPermiso" />
                    <label class="form-check-label fw-bold" style="color: #2b2d42;" asp-for="EstadoPermiso"></label>
                    <div class="form-text">Active esta opción para habilitar el permiso</div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary-custom text-white">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="fas fa-undo me-1"></i> Restablecer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validación personalizada para nombre de permiso
            $('form').on('submit', function() {
                if ($('#NombrePermiso').val().trim() === '') {
                    alert('El nombre del permiso es requerido');
                    return false;
                }
                return true;
            });
        });
    </script>
}