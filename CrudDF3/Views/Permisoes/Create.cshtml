@model CrudDF3.Models.Permiso

@{
    ViewData["Title"] = "Crear Nuevo Permiso";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver al Listado
        </a>
    </div>

    <div class="card public-card">
        <div class="card-header public-card-header">
            <h5 class="mb-0"><i class="fas fa-key me-2"></i>Información del Permiso</h5>
        </div>
        <div class="card-body public-card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="NombrePermiso" class="form-label fw-bold">Nombre del Permiso</label>
                    <input asp-for="NombrePermiso" class="form-control" placeholder="Ingrese el nombre del permiso" />
                    <span asp-validation-for="NombrePermiso" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="DescripcionPermiso" class="form-label fw-bold">Descripción</label>
                    <textarea asp-for="DescripcionPermiso" class="form-control" rows="3" placeholder="Describa el propósito de este permiso"></textarea>
                    <span asp-validation-for="DescripcionPermiso" class="text-danger small"></span>
                </div>

                <div class="form-group form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="EstadoPermiso" />
                    <label class="form-check-label fw-bold" asp-for="EstadoPermiso"></label>
                    <div class="form-text">Active esta opción para habilitar el permiso</div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary me-md-2">
                        <i class="fas fa-save me-1"></i> Crear Permiso
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="fas fa-undo me-1"></i> Limpiar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validación personalizada si es necesaria
            $('form').on('submit', function() {
                if ($('#NombrePermiso').val().trim() === '') {
                    alert('El nombre del permiso es requerido');
                    return false;
                }
                return true;
            });
        });
    </script>
}