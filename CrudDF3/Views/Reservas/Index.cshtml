@using CrudDF3.Models.ViewModels
@model IEnumerable<ReservaIndexViewModel>

@{
    var idRol = Context.Session.GetString("idRol");
    ViewData["Title"] = idRol == "2" ? "Mis Reservas" : "Lista de Reservas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nueva Reserva
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Código</th>
                <th>Usuario</th>
                <th>Fechas</th>
                <th>Personas</th>
                <th>Valor</th>
                <th>Estado</th>
                <th>Paquetes</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdReserva</td>
                    <td>@item.NombreUsuario</td>
                    <td>
                        <small class="text-muted">Inicio:</small> @item.FechaInicial?.ToString("dd/MM/yyyy")<br>
                        <small class="text-muted">Fin:</small> @item.FechaFinal?.ToString("dd/MM/yyyy")
                    </td>
                    <td>@item.NumeroPersonas</td>
                    <td>
                        <strong>@item.Valor?.ToString("C")</strong><br>
                        <small class="text-muted">Anticipo: @item.Anticipo?.ToString("C")</small>
                    </td>
                    <td>
                        <span class="badge @(item.EstadoReserva ? "bg-success" : "bg-danger")">
                            @item.EstadoReserva
                        </span>
                    </td>
                    <td>
                        @if (item.PaquetesCount > 0)
                        {
                            <button class="btn btn-sm btn-info" data-bs-toggle="tooltip"
                                    title="Paquetes incluidos (deberás cargar los nombres si los necesitas)">
                                @item.PaquetesCount paquete(s)
                            </button>
                        }
                        else
                        {
                            <span class="text-muted">Sin paquetes</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdReserva" class="btn btn-sm btn-warning" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdReserva" class="btn btn-sm btn-info" title="Detalles">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdReserva" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Opcional: Si quieres añadir DataTables
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json'
                },
                responsive: true
            });
        });
    </script>
}