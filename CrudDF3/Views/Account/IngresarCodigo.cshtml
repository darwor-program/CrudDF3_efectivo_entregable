@{
    ViewData["Title"] = "Ingresar Código";
}

<h2>Ingresar Código</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.CodigoGenerado != null)
{
    <div class="alert alert-info">Código generado (solo para pruebas): <strong>@ViewBag.CodigoGenerado</strong></div>
}

<form method="post" asp-action="VerificarCodigo" asp-controller="Account">
    <input type="hidden" name="usuario" value="@ViewBag.Usuario" />

    <div class="mb-3">
        <label for="codigoIngresado" class="form-label">Código de Verificación</label>
        <input type="number" name="codigoIngresado" class="form-control" required placeholder="Ingresa el código">
    </div>
    <button type="submit" class="btn btn-primary">Verificar Código</button>
</form>
