@model CrudDF3.Models.ViewModels.RegistrarViewModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Traveler's Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-dark: #274c77; /* Azul glaciar (oscuro) */
            --primary-light: #a3cef1; /* Celeste hielo */
            --primary-accent: #6096ba; /* Azul medio (nuevo) */
            --text-dark: #2b2d42; /* Azul noche */
            --text-light: #edf2f4; /* Blanco polar */
        }

        body {
            background: linear-gradient(135deg, var(--primary-light), white);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .registro-container {
            max-width: 800px;
            margin: 2rem auto;
        }

        .registro-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(39, 76, 119, 0.15);
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-dark), var(--primary-accent));
            color: var(--text-light);
            padding: 1.5rem;
            text-align: center;
            border-bottom: none;
        }

            .card-header h3 {
                font-weight: 700;
                margin: 0;
            }

        .card-body {
            padding: 2rem;
            background-color: white;
        }

        .form-label {
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 6px;
            padding: 0.75rem 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--primary-accent);
                box-shadow: 0 0 0 0.25rem rgba(96, 150, 186, 0.25);
            }

        .input-group-text {
            background-color: var(--primary-dark);
            color: var(--text-light);
            border: none;
        }

        .toggle-password {
            background-color: var(--primary-light);
            color: var(--primary-dark);
            border: 1px solid var(--primary-accent);
        }

            .toggle-password:hover {
                background-color: var(--primary-accent);
                color: var(--text-light);
            }

        .btn-primary {
            background-color: var(--primary-accent);
            border: none;
            padding: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
            }

        .login-link {
            color: var(--primary-accent);
            font-weight: 500;
            transition: all 0.3s;
        }

            .login-link:hover {
                color: var(--primary-dark);
                text-decoration: none;
            }

        .text-danger {
            font-size: 0.85rem;
        }

        .bi {
            vertical-align: middle;
            margin-right: 0.3rem;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="registro-card">
                    <div class="card-header">
                        <h3><i class="fas fa-user-plus"></i> Crear Cuenta en Traveler's Home</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Registro" asp-controller="Account">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="CedulaUsuario" class="form-label">Cédula</label>
                                    <input asp-for="CedulaUsuario" class="form-control" placeholder="1234567890">
                                    <span asp-validation-for="CedulaUsuario" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                                    <input asp-for="Telefono" type="tel" class="form-control" placeholder="3001234567">
                                    <span asp-validation-for="Telefono" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NombreUsuario" class="form-label">Nombres</label>
                                    <input asp-for="NombreUsuario" class="form-control" placeholder="Juan Carlos">
                                    <span asp-validation-for="NombreUsuario" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ApellidoUsuario" class="form-label">Apellidos</label>
                                    <input asp-for="ApellidoUsuario" class="form-control" placeholder="Pérez Gómez">
                                    <span asp-validation-for="ApellidoUsuario" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="CorreoUsuario" class="form-label">Correo Electrónico</label>
                                    <input asp-for="CorreoUsuario" type="email" class="form-control" placeholder="ejemplo@correo.com">
                                    <span asp-validation-for="CorreoUsuario" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ContraseñaUsuario" class="form-label">Contraseña</label>
                                    <div class="input-group">
                                        <input asp-for="ContraseñaUsuario" type="password" class="form-control" placeholder="Mínimo 8 caracteres">
                                        <button class="btn toggle-password" type="button">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ContraseñaUsuario" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Direccion" class="form-label">Dirección</label>
                                    <input asp-for="Direccion" class="form-control" placeholder="Carrera 123 #45-67">
                                    <span asp-validation-for="Direccion" class="text-danger small"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mt-4 py-2">
                                <i class="fas fa-user-check"></i> Registrarse
                            </button>

                            <div class="text-center mt-3">
                                <a asp-action="Login" class="login-link">
                                    <i class="fas fa-sign-in-alt"></i> ¿Ya tienes cuenta? Inicia sesión
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>