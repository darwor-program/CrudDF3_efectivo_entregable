@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<h2>Restablecer Contraseña</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form method="post" asp-action="GuardarNuevaContraseña" asp-controller="Account">
    <input type="hidden" name="usuario" value="@ViewBag.Correo" />

    <div class="mb-3">
        <label for="nuevaContraseña" class="form-label">Nueva Contraseña</label>
        <input type="password" name="nuevaContraseña" class="form-control" required>
    </div>
    <div class="mb-3">
        <label for="confirmarContraseña" class="form-label">Confirmar Contraseña</label>
        <input type="password" name="confirmarContraseña" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Guardar Contraseña</button>
</form>
