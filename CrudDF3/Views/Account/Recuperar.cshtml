@{
    ViewData["Title"] = "Verificar Código";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="text-center">Verificar Código</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.CodigoGenerado != null)
                    {
                        <div class="alert alert-info">
                            <strong>Código generado:</strong> @ViewBag.CodigoGenerado
                        </div>
                    }

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="codigoIngresado" class="form-label">Código de Verificación</label>
                            <input type="number" class="form-control" name="codigoIngresado" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Verificar Código</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>