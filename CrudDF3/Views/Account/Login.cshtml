@model CrudDF3.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    :root {
        --primary-dark: #274c77;
        --primary-light: #a3cef1;
        --primary-accent: #6096ba;
        --text-dark: #2b2d42;
        --text-light: #edf2f4;
        --neon-effect: #00f7ff;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        box-shadow: 0 10px 30px rgba(39, 76, 119, 0.15);
    
    }

    .login-card {
        border: none;
        border-radius: 0;
        background-color: white;
        display: flex;
        width: 900px;
        margin: 0 auto;
        
    }

    .login-header {
     
        color: var(--text-light);
        padding: 3rem;
        width: 40%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
    }

        .login-header h2 {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

    .login-body {
        padding: 3rem;
        width: 60%;
    }

    .btn-login {
        background-color: var(--primary-accent);
        color: var(--text-light);
        border: none;
        font-weight: 600;
        padding: 10px 0;
        width: 100%;
    }

    .login-links a {
        color: var(--primary-accent);
        display: block;
        margin: 0.8rem 0;
        text-decoration: none;
    }

    .form-control:focus {
        border-color: var(--primary-light);
        box-shadow: 0 0 0 0.25rem rgba(39, 76, 119, 0.25);
    }

    .input-group-text {
        background-color: var(--primary-dark);
        color: var(--text-light);
        border: none;
    }

    .alert-danger {
        background-color: #ffdddd;
        color: #d32f2f;
        border-left: 4px solid #d32f2f;
    }
</style>

<div class="login-container">
    <div class="container">
        <div class="login-card">
            <div class="login-header" >
                <img src="/Imagenes/Imagen.jpg" style="position:relative; bottom:20px;">
              
            </div>
            <div class="login-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form method="post" asp-action="Login" asp-controller="Account">
                    <div class="mb-4">
                        <label asp-for="CorreoUsuario" class="form-label">Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-user"></i>
                            </span>
                            <input asp-for="CorreoUsuario" class="form-control" placeholder="Ingresa el correo" required>
                        </div>
                        <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ContraseñaUsuario" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input asp-for="ContraseñaUsuario" type="password" class="form-control" placeholder="Ingresa la contraseña" required>
                        </div>
                        <span asp-validation-for="ContraseñaUsuario" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-login btn-block py-2 mb-3">
                        <i class="fas fa-sign-in-alt me-2"></i>ACCEDER
                    </button>

                    <div class="login-links text-center">
                        <a asp-controller="Account" asp-action="SolicitarCodigo">
                            <i class="fas fa-key me-1"></i> RECUPERAR ACCESO
                        </a>
                        <a asp-controller="Account" asp-action="Registrar">
                            <i class="fas fa-user-plus me-1"></i> NUEVO USUARIO
                        </a>
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fas fa-arrow-left me-1"></i> SALIR
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>