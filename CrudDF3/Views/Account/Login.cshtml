@model CrudDF3.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/IniciarSesion.css")">
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="row">
            <div class="col-md-6 text-center">
                <img src="~/Imagenes/Imagen.jpg" alt="Traveler’s Home" class="img-fluid" style="max-height: 300px;">
            </div>

            <div class="col-md-6">
                <div class="content-form p-4 border rounded shadow">
                    <h2 class="text-center mb-3">Iniciar Sesión</h2>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
                    }

                    <form method="post" asp-action="Login" asp-controller="Account" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="CorreoUsuario" class="form-label">Correo Electrónico</label>
                            <input asp-for="CorreoUsuario" class="form-control" placeholder="Ingresa tu correo electrónico" required>
                            <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContraseñaUsuario" class="form-label">Contraseña</label>
                            <input asp-for="ContraseñaUsuario" type="password" class="form-control" placeholder="Ingresa tu contraseña" required>
                            <span asp-validation-for="ContraseñaUsuario" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>

                        <div class="text-center mt-3">
                            <p><a asp-controller="Account" asp-action="VerificarCodigo">¿Olvidaste tu contraseña?</a></p>
                            <p><a asp-controller="Account" asp-action="Registrar">¿No tienes cuenta? Regístrate</a></p>
                        </div>
                    </form>

                    <!-- Enlace al índice de la página de inicio -->
                    <div class="text-center mt-3">
                        <p><a asp-controller="Home" asp-action="Index">Regresar al inicio</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/IniciarSesion.js")"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
