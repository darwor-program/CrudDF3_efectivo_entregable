@model CrudDF3.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Inicio de Sesión - Hotel";
    Layout = null; /* Opcional: Si no usas layout compartido */
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 + Font Awesome (para íconos) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --color-primary: #38a169;
            --color-primary-dark: #2f855a;
            --color-primary-light: #b7e4c7;
        }

        body {
            background: linear-gradient(135deg, #f0fff4 0%, #c6f6d5 100%);
            font-family: 'Segoe UI', 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(56, 161, 105, 0.2);
            overflow: hidden;
            transition: transform 0.3s;
        }

            .login-card:hover {
                transform: translateY(-5px);
            }

        .login-img {
            object-fit: cover;
            height: 100%;
            border-right: 1px solid rgba(0, 0, 0, 0.1);
        }

        .form-container {
            padding: 2.5rem;
            background: white;
        }

        .title {
            color: var(--color-primary-dark);
            position: relative;
            margin-bottom: 2rem;
            font-weight: 600;
        }

            .title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: var(--color-primary);
            }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #e2e8f0;
        }

            .form-control:focus {
                border-color: var(--color-primary);
                box-shadow: 0 0 0 0.25rem rgba(56, 161, 105, 0.25);
            }

        .btn-login {
            background-color: var(--color-primary);
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            width: 100%;
        }

            .btn-login:hover {
                background-color: var(--color-primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(47, 133, 90, 0.4);
            }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: var(--color-primary);
        }

        .link-primary {
            color: var(--color-primary-dark);
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s;
        }

            .link-primary:hover {
                color: var(--color-primary);
                text-decoration: underline;
            }

        /* Responsive */
        @@media (max-width: 992px) {
            .login-img {
                border-right: none;
                border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="login-card">
                    <div class="row g-0">
                        <!-- Imagen del Hotel -->
                        <div class="col-lg-6 d-none d-lg-block">
                            <img src="~/Imagenes/Imagen.jpg" alt="Hotel" class="login-img w-100">
                        </div>

                        <!-- Formulario -->
                        <div class="col-lg-6">
                            <div class="form-container">
                                <h2 class="title text-center">INICIAR SESIÓN</h2>

                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        @ViewBag.ErrorMessage
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                <form asp-action="Login" asp-controller="Account" method="post">
                                    <!-- Email -->
                                    <div class="mb-4 position-relative">
                                        <label asp-for="CorreoUsuario" class="form-label">Correo Electrónico</label>
                                        <i class="fas fa-envelope input-icon"></i>
                                        <input asp-for="CorreoUsuario" class="form-control ps-4" placeholder="ejemplo@hotel.com" required>
                                        <span asp-validation-for="CorreoUsuario" class="text-danger small d-block mt-1"></span>
                                    </div>

                                    <!-- Contraseña -->
                                    <div class="mb-4 position-relative">
                                        <label asp-for="ContraseñaUsuario" class="form-label">Contraseña</label>
                                        <i class="fas fa-lock input-icon"></i>
                                        <input asp-for="ContraseñaUsuario" type="password" class="form-control ps-4" placeholder="••••••••" required>
                                        <span asp-validation-for="ContraseñaUsuario" class="text-danger small d-block mt-1"></span>
                                    </div>

                                    <!-- Recordar contraseña -->
                                    <div class="mb-4 form-check">
                                        <input type="checkbox" class="form-check-input" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Recordar sesión</label>
                                    </div>

                                    <!-- Botón de Login -->
                                    <button type="submit" class="btn btn-login mb-3">
                                        <i class="fas fa-sign-in-alt me-2"></i> INGRESAR
                                    </button>

                                    <!-- Links adicionales -->
                                    <div class="text-center mt-3">
                                        <a asp-action="VerificarCodigo" asp-controller="Account" class="link-primary d-block mb-2">
                                            <i class="fas fa-question-circle me-1"></i> ¿Olvidaste tu contraseña?
                                        </a>
                                        <a asp-action="Registrar" asp-controller="Account" class="link-primary">
                                            <i class="fas fa-user-plus me-1"></i> Crear nueva cuenta
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mostrar/ocultar contraseña (opcional)
        document.querySelectorAll('.password-toggle').forEach(button => {
            button.addEventListener('click', function() {
                const input = this.previousElementSibling;
                const icon = this.querySelector('i');

                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.replace('fa-eye', 'fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.replace('fa-eye-slash', 'fa-eye');
                }
            });
        });
    </script>

    <!-- Validación del lado del cliente -->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>