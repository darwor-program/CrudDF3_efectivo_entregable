@{
    ViewData["Title"] = "Verificar Código";
}

<h2>Verificar Código</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.CodigoGenerado != null)
{
    <p class="text-success">Código generado (solo prueba): <strong>@ViewBag.CodigoGenerado</strong></p>
}

<form asp-action="VerificarCodigo" method="post">
    <div class="mb-3">
        <label for="codigoIngresado" class="form-label">Código</label>
        <input type="number" name="codigoIngresado" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Verificar</button>
</form>
