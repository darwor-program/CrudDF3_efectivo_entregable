@model CrudDF3.Models.Habitacione

@{
    ViewData["Title"] = "Eliminar Habitación";
}

<div class="container py-4">
    <div class="card border-0 shadow">
        <div class="card-header py-3" style="background: linear-gradient(135deg, #274c77, #6096ba);">
            <h2 class="h4 mb-0 text-white"><i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]</h2>
        </div>

        <div class="card-body" style="background-color: #edf2f4;">
            <h3 class="text-danger mb-4"><i class="fas fa-exclamation-triangle me-2"></i>¿Estás seguro que deseas eliminar esta habitación?</h3>

            <div class="alert alert-warning" style="border-left: 4px solid #d4af37;">
                <h4 class="alert-heading" style="color: #2b2d42;"><i class="fas fa-bed me-2"></i>Detalles de la Habitación</h4>
                <hr>
                <dl class="row">
                    <dt class="col-sm-3" style="color: #274c77;">
                        @Html.DisplayNameFor(model => model.TipoHabitacion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.TipoHabitacion)
                    </dd>

                    <dt class="col-sm-3" style="color: #274c77;">
                        @Html.DisplayNameFor(model => model.CapacidadHuespedes)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CapacidadHuespedes)
                    </dd>

                    <dt class="col-sm-3" style="color: #274c77;">
                        @Html.DisplayNameFor(model => model.EstadoHabitacion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.EstadoHabitacion)
                    </dd>

                    <dt class="col-sm-3" style="color: #274c77;">
                        @Html.DisplayNameFor(model => model.TarifaHabitacion)
                    </dt>
                    <dd class="col-sm-9">
                        $@Html.DisplayFor(model => model.TarifaHabitacion)
                    </dd>

                    <dt class="col-sm-3" style="color: #274c77;">
                        @Html.DisplayNameFor(model => model.DescripcionHabitacion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.DescripcionHabitacion)
                    </dd>

                    <dt class="col-sm-3" style="color: #274c77;">
                        @Html.DisplayNameFor(model => model.CaracteristicasHabitacion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CaracteristicasHabitacion)
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdHabitacion" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn" style="background-color: #a3cef1; color: #2b2d42;">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn" style="background-color: #dc3545; color: white;">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar Permanentemente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 8px;
            overflow: hidden;
        }

        .alert-warning {
            background-color: rgba(212, 175, 55, 0.1);
            border-color: rgba(212, 175, 55, 0.3);
            color: #2b2d42;
        }

        dt {
            font-weight: 600;
        }

        dd {
            margin-bottom: 0.5rem;
            padding-left: 1rem;
        }
    </style>
}