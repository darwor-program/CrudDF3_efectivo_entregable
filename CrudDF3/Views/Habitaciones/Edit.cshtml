@model CrudDF3.Models.Habitacione

@{
    ViewData["Title"] = "Editar Habitación";
}

<div class="container py-4">
    <div class="card border-0 shadow">
        <div class="card-header py-3" style="background: linear-gradient(135deg, #274c77, #6096ba);">
            <h2 class="h4 mb-0 text-white"><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h2>
        </div>

        <div class="card-body" style="background-color: #edf2f4;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdHabitacion" />

                <div class="row g-3">
                    <!-- Columna Izquierda -->
                    <div class="col-md-6">
                        <!-- Tipo Habitación -->
                        <div class="mb-3">
                            <label asp-for="TipoHabitacion" class="form-label fw-bold" style="color: #2b2d42;"></label>
                            <input asp-for="TipoHabitacion" class="form-control" style="border-left: 3px solid #6096ba;" />
                            <span asp-validation-for="TipoHabitacion" class="text-danger small"></span>
                        </div>

                        <!-- Capacidad -->
                        <div class="mb-3">
                            <label asp-for="CapacidadHuespedes" class="form-label fw-bold" style="color: #2b2d42;"></label>
                            <input asp-for="CapacidadHuespedes" class="form-control" style="border-left: 3px solid #6096ba;" />
                            <span asp-validation-for="CapacidadHuespedes" class="text-danger small"></span>
                        </div>

                        <!-- Estado -->
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" role="switch"
                                   asp-for="EstadoHabitacion" style="background-color: #274c77;">
                            <label class="form-check-label fw-bold" style="color: #2b2d42;"
                                   asp-for="EstadoHabitacion"></label>
                        </div>
                    </div>

                    <!-- Columna Derecha -->
                    <div class="col-md-6">
                        <!-- Tarifa -->
                        <div class="col-md-6">
                            <label asp-for="TarifaHabitacion" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="TarifaHabitacion" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="TarifaHabitacion" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Campos de texto completos -->
                    <div class="col-12">
                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="DescripcionHabitacion" class="form-label fw-bold" style="color: #2b2d42;"></label>
                            <textarea asp-for="DescripcionHabitacion" class="form-control" rows="3"
                                      style="border-left: 3px solid #6096ba;"></textarea>
                            <span asp-validation-for="DescripcionHabitacion" class="text-danger small"></span>
                        </div>

                        <!-- Características -->
                        <div class="mb-4">
                            <label asp-for="CaracteristicasHabitacion" class="form-label fw-bold" style="color: #2b2d42;"></label>
                            <textarea asp-for="CaracteristicasHabitacion" class="form-control" rows="3"
                                      style="border-left: 3px solid #6096ba;"></textarea>
                            <span asp-validation-for="CaracteristicasHabitacion" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn" style="background-color: #a3cef1; color: #2b2d42;">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                            <button type="submit" class="btn" style="background-color: #6096ba; color: white;">
                                <i class="fas fa-save me-2"></i>Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 8px;
            overflow: hidden;
        }

        .form-control:focus {
            border-color: #6096ba;
            box-shadow: 0 0 0 0.25rem rgba(96, 150, 186, 0.25);
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            border-color: #dc3545;
            color: #dc3545;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Formatear automáticamente el campo de costo
        document.getElementById('Costo').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9.]/g, '');
            e.target.value = value;
        });
    </script>
}