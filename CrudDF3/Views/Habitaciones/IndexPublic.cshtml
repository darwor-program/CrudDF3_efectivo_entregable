@model IEnumerable<CrudDF3.Models.Habitacione>

@{
    ViewData["Title"] = "Nuestras Habitaciones";
}

@section Styles {
    <style>
        :root {
            --primary-color: #1a3e3f; /* Verde oscuro elegante */
            --secondary-color: #d4af37; /* Dorado */
            --accent-color: #e8c07d; /* Dorado claro */
            --light-bg: #f9f5f0; /* Beige claro */
            --dark-text: #2d2d2d;
            --light-text: #f8f9fa;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--dark-text);
            background-color: var(--light-bg);
            line-height: 1.6;
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
        }

        .hero-section {
            min-height: 60vh;
            padding: 4rem 0;
            background: linear-gradient(rgba(26, 62, 63, 0.85), rgba(26, 62, 63, 0.85)), url('@Url.Content("~/Imagenes/background.jpg")') no-repeat center center;
            background-size: cover;
            color: white;
            display: flex;
            align-items: center;
            margin-bottom: 3rem;
            text-align: center;
        }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }

            .section-title::after {
                content: "";
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background-color: var(--secondary-color);
            }

        /* Estilos mejorados para las tarjetas */
        .room-card {
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            border-radius: 12px;
            overflow: hidden;
            border: none;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            height: 100%;
            background-color: white;
            position: relative;
        }

            .room-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
            }

        .room-image {
            height: 220px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .room-card:hover .room-image {
            transform: scale(1.05);
        }

        .room-card-header {
            background-color: white;
            color: var(--primary-color);
            padding: 1.5rem 1.5rem 0.5rem;
            border-bottom: none;
            position: relative;
        }

        .room-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--primary-color);
            position: relative;
            display: inline-block;
        }

            .room-title::after {
                content: "";
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 50px;
                height: 2px;
                background-color: var(--secondary-color);
            }

        .room-card-body {
            padding: 0 1.5rem 1.5rem;
        }

        .room-description {
            color: #666;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            line-height: 1.7;
        }

        .room-features {
            list-style: none;
            padding-left: 0;
            margin-bottom: 1.5rem;
        }

            .room-features li {
                margin-bottom: 0.8rem;
                position: relative;
                padding-left: 2rem;
                color: #555;
                line-height: 1.5;
            }

                .room-features li::before {
                    content: "\f00c";
                    font-family: "Font Awesome 6 Free";
                    font-weight: 900;
                    position: absolute;
                    left: 0;
                    color: var(--secondary-color);
                    font-size: 1rem;
                }

        .capacity-info {
            display: flex;
            align-items: center;
            color: var(--primary-color);
            font-weight: 500;
            margin-top: 1rem;
        }

            .capacity-info i {
                margin-right: 8px;
                color: var(--secondary-color);
            }

        /* Efecto de superposición para imágenes */
        .image-container {
            position: relative;
            overflow: hidden;
        }

        .image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 40%;
            background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 100%);
            display: flex;
            align-items: flex-end;
            padding: 1rem;
        }

        .room-type-badge {
            background-color: var(--secondary-color);
            color: var(--primary-color);
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .room-card {
                margin-bottom: 1.5rem;
            }

            .room-image {
                height: 200px;
            }
        }

        @@media (max-width: 768px) {
            .hero-section {
                min-height: 50vh;
                padding: 3rem 0;
            }

            .section-title {
                font-size: 2rem;
            }

            .room-title {
                font-size: 1.3rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-section {
                min-height: 40vh;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .room-image {
                height: 180px;
            }
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Nuestras Habitaciones</h1>
        <p class="lead mb-4">Descubre espacios diseñados para tu comodidad</p>
        <div class="section-title"></div>
    </div>
</section>

<!-- Habitaciones Section -->
<div class="container">
    <div class="row">
        @{
            // Array de imágenes de ejemplo para las habitaciones
            var roomImages = new List<string> {
        "/Imagenes/Habitacion1.jpg",
        "/Imagenes/Habitacion2.jpg",
        "/Imagenes/Habitacion3.jpg",
        "/Imagenes/Habitacion4.jpg",
        "/Imagenes/Habitacion5.jpg",
        "/Imagenes/Habitacion6.jpg"
        };

            int imageIndex = 0;
        }

        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="room-card">
                    <div class="image-container">
                        <img src="@roomImages[imageIndex % roomImages.Count]" class="room-image" alt="@item.TipoHabitacion">
                        <div class="image-overlay">
                            <span class="room-type-badge">@item.TipoHabitacion</span>
                        </div>
                    </div>

                    <div class="room-card-header">
                        <h3 class="room-title">@item.TipoHabitacion</h3>
                    </div>

                    <div class="room-card-body">
                        <p class="room-description">@item.DescripcionHabitacion</p>

                        <h5>Características:</h5>
                        <ul class="room-features">
                            @foreach (var caracteristica in item.CaracteristicasHabitacion?.Split(',') ?? new string[0])
                            {
                                <li>@caracteristica.Trim()</li>
                            }
                        </ul>

                        <div class="capacity-info">
                            <i class="fas fa-users"></i>
                            <span>Capacidad para @item.CapacidadHuespedes personas</span>
                        </div>
                    </div>
                </div>
            </div>

            imageIndex++;
        }
    </div>
</div>