@model CrudDF3.Models.Huespede

@{
    ViewData["Title"] = "Registrar Nuevo Huésped";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@ViewData["Title"]</h4>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Volver al listado
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CedulaHuesped" class="form-label fw-bold"></label>
                            <input asp-for="CedulaHuesped" class="form-control" required />
                            <span asp-validation-for="CedulaHuesped" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NombreHuesped" class="form-label fw-bold"></label>
                            <input asp-for="NombreHuesped" class="form-control" required />
                            <span asp-validation-for="NombreHuesped" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ApellidoHuesped" class="form-label fw-bold"></label>
                            <input asp-for="ApellidoHuesped" class="form-control" required />
                            <span asp-validation-for="ApellidoHuesped" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CorreoHuesped" class="form-label fw-bold"></label>
                            <input asp-for="CorreoHuesped" type="email" class="form-control" required />
                            <span asp-validation-for="CorreoHuesped" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FechaEntradaHuesped" class="form-label fw-bold"></label>
                            <input asp-for="FechaEntradaHuesped" type="date" class="form-control" required />
                            <span asp-validation-for="FechaEntradaHuesped" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FechaSalidaHuesped" class="form-label fw-bold"></label>
                            <input asp-for="FechaSalidaHuesped" type="date" class="form-control" required />
                            <span asp-validation-for="FechaSalidaHuesped" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12 mt-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary-accent px-4">
                                <i class="fas fa-save me-2"></i> Registrar Huésped
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary-dark: #274c77;
            --primary-light: #a3cef1;
            --primary-accent: #6096ba;
            --text-dark: #2b2d42;
            --text-light: #edf2f4;
        }

        .card {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .card-header {
            background-color: var(--primary-dark);
            color: white;
            padding: 1rem 1.5rem;
            border-bottom: none;
        }

        .form-label {
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            padding: 0.5rem 0.75rem;
        }

            .form-control:focus {
                border-color: var(--primary-accent);
                box-shadow: 0 0 0 0.25rem rgba(96, 150, 186, 0.25);
            }

        .btn-primary-accent {
            background-color: var(--primary-accent);
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 0.375rem;
            transition: all 0.3s;
        }

            .btn-primary-accent:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
            }

        .btn-outline-light {
            border-color: white;
            color: white;
            transition: all 0.3s;
        }

            .btn-outline-light:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        .text-danger {
            color: #dc3545 !important;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Validación del formulario
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}