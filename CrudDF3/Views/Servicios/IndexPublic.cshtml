@model IEnumerable<CrudDF3.Models.Servicio>

@{
    ViewData["Title"] = "Nuestros Servicios Exclusivos";
}

@section Styles {
    <style>
        :root {
            --primary-color: #1a3e3f; /* Verde oscuro elegante */
            --secondary-color: #d4af37; /* Dorado */
            --accent-color: #e8c07d; /* Dorado claro */
            --light-bg: #f9f5f0; /* Beige claro */
            --dark-text: #2d2d2d;
            --light-text: #f8f9fa;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--dark-text);
            background-color: var(--light-bg);
            line-height: 1.6;
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
        }

        .hero-section {
            min-height: 60vh;
            padding: 4rem 0;
            background: linear-gradient(rgba(26, 62, 63, 0.85), rgba(26, 62, 63, 0.85)), url('@Url.Content("~/Imagenes/services-bg.jpg")') no-repeat center center;
            background-size: cover;
            color: white;
            display: flex;
            align-items: center;
            margin-bottom: 3rem;
            text-align: center;
        }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }

            .section-title::after {
                content: "";
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background-color: var(--secondary-color);
            }

        /* Estilos para las tarjetas de servicios */
        .service-card {
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            border-radius: 12px;
            overflow: hidden;
            border: none;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            height: 100%;
            background-color: white;
        }

            .service-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
            }

        .service-image {
            height: 220px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .service-card:hover .service-image {
            transform: scale(1.05);
        }

        .service-card-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem;
            border-bottom: none;
        }

        .service-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            color: white;
            position: relative;
            display: inline-block;
        }

            .service-title::after {
                content: "";
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 50px;
                height: 2px;
                background-color: var(--secondary-color);
            }

        .service-card-body {
            padding: 1.5rem;
        }

        .service-description {
            color: #666;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            line-height: 1.7;
        }

        .service-features {
            list-style: none;
            padding-left: 0;
            margin-bottom: 1.5rem;
        }

            .service-features li {
                margin-bottom: 0.8rem;
                position: relative;
                padding-left: 2rem;
                color: #555;
                line-height: 1.5;
            }

                .service-features li::before {
                    content: "\f00c";
                    font-family: "Font Awesome 6 Free";
                    font-weight: 900;
                    position: absolute;
                    left: 0;
                    color: var(--secondary-color);
                    font-size: 1rem;
                }

        .price-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 1px dashed #ddd;
        }

        .service-price {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .service-category {
            background-color: var(--accent-color);
            color: var(--primary-color);
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .service-card {
                margin-bottom: 1.5rem;
            }

            .service-image {
                height: 200px;
            }
        }

        @@media (max-width: 768px) {
            .hero-section {
                min-height: 50vh;
                padding: 3rem 0;
            }

            .section-title {
                font-size: 2rem;
            }

            .service-title {
                font-size: 1.3rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-section {
                min-height: 40vh;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .service-image {
                height: 180px;
            }
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Nuestros Servicios Exclusivos</h1>
        <p class="lead mb-4">Experiencias diseñadas para hacer tu estancia memorable</p>
        <div class="section-title"></div>
    </div>
</section>

<!-- Servicios Section -->
<div class="container">
    <div class="row">
        @{
            // Array de imágenes de ejemplo para los servicios
            var serviceImages = new List<string> {
        "/Imagenes/Servicio1.jpg",
        "/Imagenes/Servicio2.jpg",
        "/Imagenes/Servicio3.jpg",
        "/Imagenes/Servicio4.jpg",
        "/Imagenes/Servicio5.jpg",
        "/Imagenes/Servicio6.jpg"
        };

            int imageIndex = 0;
        }

        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="image-container">
                        <img src="@serviceImages[imageIndex % serviceImages.Count]" class="service-image" alt="@item.NombreServicio">
                    </div>

                    <div class="service-card-header">
                        <h3 class="service-title">@item.NombreServicio</h3>
                        <span class="service-category">@item.Categoria</span>
                    </div>

                    <div class="service-card-body">
                        <p class="service-description">@item.Descripcion</p>

                        @if (!string.IsNullOrEmpty(item.Observacion))
                        {
                            <h5>Detalles:</h5>
                            <ul class="service-features">
                                @foreach (var detalle in item.Observacion.Split(','))
                                {
                                    <li>@detalle.Trim()</li>
                                }
                            </ul>
                        }

                        <div class="price-info">
                            <span class="service-price">@item.Costo?.ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>

            imageIndex++;
        }
    </div>
</div>