@model IEnumerable<CrudDF3.Models.PaquetesTuristico>


        <div class="tab-content p-3 border border-top-0 rounded-bottom">
            <div class="tab-pane fade show active" id="inicio-tab">
                <h2 class="text-center">Bienvenido a nuestro hotel</h2>
                <p class="text-center">Presiona la pestaña "Habitaciones" para ver nuestras opciones</p>
            </div>

            <div class="tab-pane fade" id="habitaciones-tab">
                <div class="row">
                    @foreach (var habitacion in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <!-- Mismo diseño de tarjeta que el ejemplo anterior -->
                        </div>
                    }
                </div>
            </div>
        </div>
     @{
        ViewData["Title"] = "Traveler's Home - Inicio";
    }



    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Traveler's Home - Tu hogar lejos de casa. Ofrecemos habitaciones cómodas y acogedoras para tu viaje perfecto.">
        <title>@ViewData["Title"]</title>

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">

        <!-- Estilos personalizados -->
        <link rel="stylesheet" href="@Url.Content("~/css/Bienvenido.css")" />

        <style>
            :root {
                --primary-color: #1a3e3f; /* Verde oscuro elegante */
                --secondary-color: #d4af37; /* Dorado */
                --accent-color: #e8c07d; /* Dorado claro */
                --light-bg: #f9f5f0; /* Beige claro */
                --dark-text: #2d2d2d;
                --light-text: #f8f9fa;
            }

            body {
                font-family: 'Montserrat', sans-serif;
                color: var(--dark-text);
                overflow-x: hidden;
                background-color: var(--light-bg);
                line-height: 1.6;
            }

            h1, h2, h3, h4 {
                font-family: 'Playfair Display', serif;
                font-weight: 700;
            }

            .hero-section {
                min-height: 100vh;
                padding: 4rem 0;
                background: linear-gradient(rgba(26, 62, 63, 0.85), rgba(26, 62, 63, 0.85)), url('@Url.Content("~/Imagenes/background.jpg")') no-repeat center center;
                background-size: cover;
                color: white;
            }

            .section-divider {
                height: 4px;
                background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--primary-color));
                margin: 3rem 0;
                border: none;
            }

            .feature-section {
                background-color: white;
                padding: 5rem 0;
                position: relative;
                overflow: hidden;
            }

                .feature-section::before {
                    content: "";
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 10px;
                    background: linear-gradient(90deg, var(--secondary-color), var(--primary-color));
                }

            .btn-primary-custom {
                background-color: var(--secondary-color);
                color: var(--primary-color);
                padding: 0.8rem 2rem;
                border: none;
                border-radius: 30px;
                font-weight: 600;
                transition: all 0.3s ease;
                letter-spacing: 1px;
                font-size: 1rem;
                box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
            }

                .btn-primary-custom:hover {
                    background-color: var(--accent-color);
                    transform: translateY(-3px);
                    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
                    color: var(--primary-color);
                }

            .carousel-img {
                width: 100%;
                height: 450px;
                object-fit: cover;
                border-radius: 8px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
                transition: transform 0.5s ease;
            }

            .carousel-item:hover .carousel-img {
                transform: scale(1.02);
            }

            .carousel-control-prev, .carousel-control-next {
                width: 5%;
                opacity: 0.8;
                transition: opacity 0.3s ease;
            }

                .carousel-control-prev:hover, .carousel-control-next:hover {
                    opacity: 1;
                }

            .carousel-control-prev-icon, .carousel-control-next-icon {
                background-color: var(--primary-color);
                padding: 1.5rem;
                border-radius: 50%;
                background-size: 1.5rem;
            }

            .welcome-text {
                font-size: 1.15rem;
                line-height: 1.8;
                margin-bottom: 2.5rem;
                color: inherit;
            }

            .lead {
                font-size: 1.4rem;
                color: var(--accent-color);
            }

            .display-4 {
                font-size: 3rem;
                margin-bottom: 1.5rem;
                position: relative;
                display: inline-block;
            }

                .display-4::after {
                    content: "";
                    position: absolute;
                    bottom: -10px;
                    left: 0;
                    width: 80px;
                    height: 4px;
                    background-color: var(--secondary-color);
                }

            .feature-icon {
                font-size: 2.5rem;
                color: var(--secondary-color);
                margin-bottom: 1.5rem;
            }



            .display-4 {
                font-size: 2.5rem;
            }

            .carousel-img {
                height: 350px;
                margin-top: 2rem;
            }

            .hero-section {
                text-align: center;
            }

            .display-4::after {
                left: 50%;
                transform: translateX(-50%);
            }






            .carousel-img {
                height: 300px;
            }

            .display-4 {
                font-size: 2rem;
            }

            .lead {
                font-size: 1.2rem;
            }



            /* Animaciones */



            to {
                opacity: 1;
                transform: translateY(0);
            }



            .animated-section {
                animation: fadeIn 1s ease-out forwards;
            }

            .delay-1 {
                animation-delay: 0.3s;
            }

            .delay-2 {
                animation-delay: 0.6s;
            }
        </style>
    </head>
    <body>
        <!-- Sección Hero (Habitaciones) -->
        <section class="hero-section d-flex align-items-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 mb-4 mb-lg-0 animated-section">
                        <h1 class="display-4 fw-bold mb-4">Habitaciones <i class="fas fa-home ms-2"></i></h1>
                        <p class="lead fw-bold mb-4">¡Bienvenido a Traveler's Home! <i class="fas fa-heart"></i></p>
                        <p class="welcome-text">
                            Tu refugio de tranquilidad. En Traveler's Home, hemos creado espacios que combinan elegancia y comodidad
                            para que cada momento de tu viaje sea memorable. Descubre nuestras habitaciones diseñadas con atención
                            al detalle y disfruta de un servicio excepcional.
                        </p>
                        <a href="@Url.Action("IndexPublic", "Habitaciones")" class="btn btn-primary-custom delay-1">
                            <i class="fas fa-door-open me-2"></i>Explorar Habitaciones
                        </a>
                    </div>
                    <div class="col-lg-6 animated-section delay-1">
                        <div id="roomsCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner rounded">
                                <div class="carousel-item active">
                                    <img src="@Url.Content("~/Imagenes/Habitacion1.jpg")" class="d-block w-100 carousel-img" alt="Habitación estándar con diseño moderno">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Url.Content("~/Imagenes/Habitacion2.jpg")" class="d-block w-100 carousel-img" alt="Suite familiar espaciosa">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Url.Content("~/Imagenes/Habitacion3.jpg")" class="d-block w-100 carousel-img" alt="Suite premium con vista panorámica">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#roomsCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#roomsCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <hr class="section-divider">

        <!-- Sección de Reservas -->
        <section class="feature-section">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0 ps-lg-5 animated-section">
                        <h1 class="display-4 fw-bold mb-4">Experiencias <i class="fas fa-calendar-check ms-2"></i></h1>
                        <p class="lead fw-bold mb-4">Descubre paquetes exclusivos <i class="fas fa-smile"></i></p>
                        <p class="welcome-text">
                            Más que una estancia, ofrecemos experiencias. Nuestros paquetes cuidadosamente diseñados combinan
                            alojamiento de lujo con actividades únicas para crear recuerdos inolvidables. Desde escapadas
                            románticas hasta aventuras familiares, tenemos la opción perfecta para ti.
                        </p>
                        <a href="@Url.Action("IndexPublic", "PaquetesTuristicoes")" class="btn btn-primary-custom delay-1">
                            <i class="fas fa-suitcase-rolling me-2"></i>Ver Paquetes
                        </a>
                    </div>
                    <div class="col-lg-6 order-lg-1 animated-section delay-1">
                        <div id="packagesCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner rounded">
                                <div class="carousel-item active">
                                    <img src="@Url.Content("~/Imagenes/Paquete1.jpg")" class="d-block w-100 carousel-img" alt="Paquete familiar en la naturaleza">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Url.Content("~/Imagenes/Paquete2.jpg")" class="d-block w-100 carousel-img" alt="Paquete romántico con cena gourmet">
                                </div>
                                <div class="carousel-item">
                                    <img src="@Url.Content("~/Imagenes/Paquete3.jpg")" class="d-block w-100 carousel-img" alt="Paquete de aventura en la montaña">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#packagesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#packagesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>



    </body>
</html>
