@model IEnumerable<CrudDF3.Models.PaquetesTuristico>

@{
    ViewData["Title"] = "Experiencias Exclusivas";
}

@section Styles {
    <style>
        :root {
            --primary-dark: #274c77;
            --primary-light: #a3cef1;
            --primary-accent: #6096ba;
            --text-dark: #2b2d42;
            --text-light: #edf2f4;
            --light-bg: #f8f9fa;
            --card-bg: #ffffff;
            --transition-speed: 0.4s;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text-dark);
            background-color: var(--light-bg);
            line-height: 1.6;
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
        }

        /* Hero Section */
        .hero-section {
            min-height: 70vh;
            padding: 5rem 0;
            background: linear-gradient(rgba(39, 76, 119, 0.85), rgba(39, 76, 119, 0.85)), url('@Url.Content("~/Imagenes/travel-banner.jpg")') no-repeat center center/cover;
            color: white;
            display: flex;
            align-items: center;
            margin-bottom: 4rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2.5rem;
        }

            .section-title::after {
                content: "";
                position: absolute;
                bottom: -12px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: var(--primary-accent);
                animation: lineExpand 1.5s ease-out;
            }

        @@keyframes lineExpand {
            from {
                width: 0;
                opacity: 0;
            }

            to {
                width: 100px;
                opacity: 1;
            }
        }

        /* Tarjetas de Paquetes */
        .package-card {
            transition: all var(--transition-speed);
            border-radius: 16px;
            overflow: hidden;
            border: none;
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.1);
            margin-bottom: 2.5rem;
            height: 100%;
            background-color: var(--card-bg);
            position: relative;
        }

            .package-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
            }

        .package-image-container {
            position: relative;
            overflow: hidden;
            height: 280px;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
        }

        .package-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s ease;
        }

        .package-card:hover .package-image {
            transform: scale(1.05);
        }

        .package-badge {
            position: absolute;
            top: 25px;
            right: 25px;
            background-color: var(--primary-accent);
            color: white;
            padding: 0.6rem 1.5rem;
            border-radius: 30px;
            font-weight: 800;
            font-size: 1rem;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
            z-index: 3;
        }

        .package-card-body {
            padding: 2rem;
        }

        .package-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            margin-bottom: 1.2rem;
            color: var(--primary-dark);
        }

        .package-description {
            color: var(--text-dark);
            opacity: 0.8;
            margin-bottom: 1.8rem;
            font-size: 1rem;
            line-height: 1.8;
        }

        .destination-info {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            color: var(--primary-dark);
            font-size: 1.1rem;
        }

            .destination-info i {
                margin-right: 12px;
                color: var(--primary-accent);
                font-size: 1.4rem;
            }

        /* Acordeones */
        .accordion-section {
            margin: 1.8rem 0;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
        }

        .accordion-header {
            background-color: var(--primary-light);
            padding: 1rem 1.5rem;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
        }

            .accordion-header:hover {
                background-color: var(--primary-accent);
                color: white;
            }

            .accordion-header h5 {
                margin: 0;
                font-weight: 600;
                color: var(--primary-dark);
                display: flex;
                align-items: center;
            }

            .accordion-header:hover h5 {
                color: white;
            }

            .accordion-header h5 i {
                margin-right: 10px;
                color: var(--primary-dark);
                transition: transform 0.3s ease;
            }

            .accordion-header:hover h5 i {
                color: white;
            }

            .accordion-header.active h5 i {
                transform: rotate(90deg);
            }

        .accordion-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease, padding 0.3s ease;
            background-color: white;
        }

        .accordion-header.active + .accordion-content {
            max-height: 500px;
            padding: 1rem 1.5rem;
        }

        .feature-list {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }

            .feature-list li {
                padding: 0.7rem 0;
                border-bottom: 1px dashed #eee;
                display: flex;
                align-items: center;
            }

                .feature-list li:last-child {
                    border-bottom: none;
                }

                .feature-list li i {
                    margin-right: 10px;
                    color: var(--primary-accent);
                    font-size: 0.9rem;
                }

        /* Footer de Tarjeta */
        .package-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1.5rem;
            margin-top: 1.5rem;
            border-top: 1px solid #f0f0f0;
        }

        .travel-info {
            display: flex;
            align-items: center;
            color: var(--text-dark);
            opacity: 0.7;
            font-size: 0.95rem;
        }

            .travel-info i {
                margin-right: 8px;
                color: var(--primary-accent);
                font-size: 1.1rem;
            }

        /* Responsive */
        @@media (max-width: 1200px) {
            .package-image-container {
                height: 240px;
            }
        }

        @@media (max-width: 992px) {
            .package-card {
                margin-bottom: 2rem;
            }

            .package-image-container {
                height: 220px;
            }

            .package-title {
                font-size: 1.6rem;
            }
        }

        @@media (max-width: 768px) {
            .hero-section {
                min-height: 60vh;
                padding: 4rem 0;
            }

            .section-title {
                font-size: 2.2rem;
            }
        }

        @@media (max-width: 576px) {
            .hero-section {
                min-height: 50vh;
            }

            .section-title {
                font-size: 1.9rem;
            }

            .package-image-container {
                height: 200px;
                clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
            }

            .package-card-body {
                padding: 1.5rem;
            }
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
        <h1 class="display-4 fw-bold mb-4">@ViewData["Title"]</h1>
        <p class="lead mb-4">Descubre experiencias únicas diseñadas para crear memorias inolvidables</p>
        <div class="section-title"></div>
    </div>
</section>

<!-- Paquetes Section -->
<div class="container">
    <div class="row">
        @{
            var packageImages = new List<string> {
        "/Imagenes/Paquete1.jpg",
        "/Imagenes/Paquete2.jpg",
        "/Imagenes/Paquete3.jpg",
        "/Imagenes/Paquete4.jpg",
        "/Imagenes/Paquete5.jpg",
        "/Imagenes/Paquete6.jpg"
        };
            int imageIndex = 0;
        }

        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-5">
                <div class="package-card">
                    <div class="package-image-container">
                        <img src="@packageImages[imageIndex % packageImages.Count]" class="package-image" alt="@item.NombrePaquete">
                        <div class="package-badge">
                            @item.PrecioPaquete?.ToString("C")
                        </div>
                    </div>

                    <div class="package-card-body">
                        <h3 class="package-title">@item.NombrePaquete</h3>
                        <p class="package-description">@item.DescripcionPaquete</p>

                        <div class="destination-info">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>@item.DestinoPaquete</span>
                        </div>

                        <!-- Acordeón para Habitaciones -->
                        <div class="accordion-section">
                            <div class="accordion-header">
                                <h5><i class="fas fa-bed"></i> Habitaciones Incluidas</h5>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="accordion-content">
                                <ul class="feature-list">
                                    @foreach (var habitacion in item.PaqueteHabitaciones)
                                    {
                                        <li>
                                            <i class="fas fa-door-open"></i>
                                            @habitacion.IdHabitacionNavigation?.TipoHabitacion
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <!-- Acordeón para Servicios -->
                        <div class="accordion-section">
                            <div class="accordion-header">
                                <h5><i class="fas fa-concierge-bell"></i> Servicios Incluidos</h5>
                                <i class="fas fa-chevron-right"></i>
                            </div>
                            <div class="accordion-content">
                                <ul class="feature-list">
                                    @foreach (var servicio in item.PaqueteServicios)
                                    {
                                        <li>
                                            <i class="fas fa-check-circle"></i>
                                            @servicio.IdServicioNavigation?.NombreServicio
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                        <div class="package-footer">
                            <div class="travel-info">
                                <i class="fas fa-calendar-alt"></i>
                                <span>@item.FechaPaquete?.ToString("d")</span>
                            </div>
                            <div class="travel-info">
                                <i class="fas fa-clock"></i>
                                <span>@item.TipoViajePaquete</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            imageIndex++;
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Acordeones interactivos
            const accordionHeaders = document.querySelectorAll('.accordion-header');

            accordionHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    this.classList.toggle('active');
                    const content = this.nextElementSibling;

                    if (this.classList.contains('active')) {
                        content.style.maxHeight = content.scrollHeight + 'px';
                    } else {
                        content.style.maxHeight = '0';
                    }

                    // Rotar ícono
                    const icon = this.querySelector('.fa-chevron-right');
                    icon.style.transform = this.classList.contains('active') ? 'rotate(90deg)' : 'rotate(0)';
                });
            });

            // Efecto de aparición gradual para las tarjetas
            const packageCards = document.querySelectorAll('.package-card');

            packageCards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                card.style.transition = `all 0.6s ease ${index * 0.1}s`;

                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100);
            });
        });
    </script>
}