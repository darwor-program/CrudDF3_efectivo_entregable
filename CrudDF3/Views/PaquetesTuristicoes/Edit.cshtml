@model CrudDF3.Models.PaquetesTuristico

@{
    ViewData["Title"] = "Editar Paquete Turístico";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPaquete" />

            <!-- Información básica del paquete -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Capacidad Total</label>
                        <input id="capacidad-total" class="form-control" value="@Model.CapacidadPaquete" readonly />
                        <input type="hidden" id="capacidad-total-hidden" asp-for="CapacidadPaquete" value="@Model.CapacidadPaquete" />
                        <small class="form-text text-muted">Capacidad total basada en las habitaciones seleccionadas.</small>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombrePaquete" class="control-label"></label>
                        <input asp-for="NombrePaquete" class="form-control" />
                        <span asp-validation-for="NombrePaquete" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripcionPaquete" class="control-label"></label>
                        <textarea asp-for="DescripcionPaquete" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DescripcionPaquete" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PrecioPaquete" class="control-label"></label>
                        <input asp-for="PrecioPaquete" id="precio-paquete" class="form-control" readonly />
                        <span asp-validation-for="PrecioPaquete" class="text-danger"></span>
                        <small class="form-text text-muted">Precio calculado automáticamente</small>
                    </div>
                    <div class="form-group">
                        <label asp-for="DestinoPaquete" class="control-label"></label>
                        <input asp-for="DestinoPaquete" class="form-control" />
                        <span asp-validation-for="DestinoPaquete" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Configuración de estado y disponibilidad -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Configuración del Paquete</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" asp-for="DisponibilidadPaquete" />
                                <label class="form-check-label" asp-for="DisponibilidadPaquete"></label>
                                <small class="form-text text-muted">Indica si el paquete está disponible para reservas.</small>
                            </div>
                            <div class="form-group">
                                <label asp-for="StockPaquete" class="control-label"></label>
                                <input asp-for="StockPaquete" class="form-control" type="number" min="0" />
                                <span asp-validation-for="StockPaquete" class="text-danger"></span>
                                <small class="form-text text-muted">Cantidad disponible de este paquete.</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" asp-for="EstadoPaquete" />
                                <label class="form-check-label" asp-for="EstadoPaquete"></label>
                                <small class="form-text text-muted">Activa o desactiva el paquete en el sistema.</small>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FechaPaquete" class="control-label"></label>
                                <input asp-for="FechaPaquete" class="form-control" type="date" />
                                <span asp-validation-for="FechaPaquete" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TipoViajePaquete" class="control-label"></label>
                                <select asp-for="TipoViajePaquete" class="form-control">
                                    <option value="">Seleccione un tipo</option>
                                    <option value="Nacional">Nacional</option>
                                    <option value="Internacional">Internacional</option>
                                    <option value="Aventura">Aventura</option>
                                    <option value="Romántico">Romántico</option>
                                    <option value="Familiar">Familiar</option>
                                </select>
                                <span asp-validation-for="TipoViajePaquete" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Selección de Servicios -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Servicios Disponibles</h5>
                </div>
                <div class="card-body">
                    @if (ViewData["Servicios"] is IEnumerable<Servicio> servicios && servicios.Any())
                    {
                        <div class="row">
                            @foreach (var servicio in servicios)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input servicio-checkbox"
                                                       type="checkbox"
                                                       name="SelectedServicios"
                                                       value="@servicio.IdServicio"
                                                       id="servicio_@servicio.IdServicio"
                                                       data-price="@servicio.Costo"
                                                @(Model.SelectedServicios?.Contains(servicio.IdServicio) ?? false ? "checked" : "")>
                                                <label class="form-check-label" for="servicio_@servicio.IdServicio">
                                                    <strong>@servicio.NombreServicio</strong>
                                                </label>
                                            </div>
                                            <p class="card-text small mt-2">@servicio.Descripcion</p>
                                            <div class="d-flex justify-content-between mt-2">
                                                <span class="badge bg-info">@servicio.Categoria</span>
                                                <span class="badge bg-success">@servicio.Costo?.ToString("C")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay servicios disponibles</p>
                    }
                </div>
            </div>

            <!-- Selección de Habitaciones -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Habitaciones Disponibles</h5>
                </div>
                <div class="card-body">
                    @if (ViewData["Habitaciones"] is IEnumerable<Habitacione> habitaciones && habitaciones.Any())
                    {
                        <div class="row">
                            @foreach (var habitacion in habitaciones)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input class="form-check-input habitacion-checkbox"
                                                       type="checkbox"
                                                       name="SelectedHabitaciones"
                                                       value="@habitacion.IdHabitacion"
                                                       id="habitacion_@habitacion.IdHabitacion"
                                                       data-price="@habitacion.TarifaHabitacion"
                                                       data-capacity="@habitacion.CapacidadHuespedes"
                                                @(Model.SelectedHabitaciones?.Contains(habitacion.IdHabitacion) ?? false ? "checked" : "")>
                                                <label class="form-check-label" for="habitacion_@habitacion.IdHabitacion">
                                                    <strong>@habitacion.TipoHabitacion</strong>
                                                </label>
                                            </div>
                                            <p class="card-text small mt-2">@habitacion.DescripcionHabitacion</p>
                                            <div class="d-flex justify-content-between mt-2">
                                                <span class="badge bg-primary">Capacidad: @habitacion.CapacidadHuespedes</span>
                                                <span class="badge bg-success">@habitacion.TarifaHabitacion?.ToString("C")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay habitaciones disponibles</p>
                    }
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Función para calcular el precio total
            function calcularPrecioTotal() {
                let precioTotal = 0;
                let capacidadTotal = 0;

                // Sumar precios de servicios seleccionados
                $('.servicio-checkbox:checked').each(function() {
                    precioTotal += parseFloat($(this).data('price')) || 0;
                });

                // Sumar precios y capacidades de habitaciones seleccionadas
                $('.habitacion-checkbox:checked').each(function() {
                    precioTotal += parseFloat($(this).data('price')) || 0;
                    capacidadTotal += parseInt($(this).data('capacity')) || 0;
                });

                // Actualizar los campos
                $('#precio-paquete').val(precioTotal.toFixed(2));
                $('#capacidad-total').val(capacidadTotal);
                $('#capacidad-total-hidden').val(capacidadTotal);
            }

            // Escuchar cambios en los checkboxes
            $('.servicio-checkbox, .habitacion-checkbox').change(function() {
                calcularPrecioTotal();
            });

            // Calcular inicialmente por si hay valores precargados
            calcularPrecioTotal();
        });
    </script>
}